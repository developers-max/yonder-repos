{
  "name": "@yonder/persistence",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared database schema, types, and utilities for Yonder platform",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "require": "./dist/schema/index.cjs"
    },
    "./connection": {
      "types": "./dist/connection/index.d.ts",
      "import": "./dist/connection/index.js",
      "require": "./dist/connection/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "pg": "^8.16.0",
    "zod": "^3.25.20"
  },
  "devDependencies": {
    "@types/pg": "^8.15.2",
    "tsup": "^8.3.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.0"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.43.0"
  }
}
